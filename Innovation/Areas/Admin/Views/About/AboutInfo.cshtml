@model List<Core.Models.About>

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="/Admin/About/Create/0" class="btn btn-success">Create New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ttile</th>
                            <th>Description</th>
                            <th>Name</th>
                            <th>DOB</th>
                            <th>Nationality</th>
                            <th>WorkState</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>العنوان</th>
                            <th>الوصف</th>
                            <th>الاسم</th>
                            <th>الجنسية</th>
                            <th>العمل</th>
                            <th>موبيل</th>
                            <th>العنوان</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                            <tr>
                                <td>@items.Title</td>
                                <td>@items.Description</td>
                                <td>@items.Name</td>
                                <td>@items.DateOfBirth</td>
                                <td>@items.Nationality</td>
                                <td>@items.WorkState</td>
                                <td>@items.Phone</td>
                                <td>@items.Email</td>
                                <td>@items.Address</td>
                                <td>@items.TitleArabic</td>
                                <td>@items.DescriptionArabic</td>
                                <td>@items.NameArabic</td>
                                <td>@items.NationalityArabic</td>
                                <td>@items.WorkStateArabic</td>
                                <td>@items.PhoneArabic</td>
                                <td>@items.AddressArabic</td>
                                <td>
                                    <img src="@string.Format("/UploadAbout/{0}", items.Image)" width="100" height="100" />
                                </td>
                                <td>
                                    <a asp-controller="About" asp-action="Create" asp-route-Id="@items.Id" class="btn btn-info">Edit</a>
                                    <form asp-controller="About" asp-action="Delete" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@items.Id" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
@section Scripts
{
    <script src="~/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
}