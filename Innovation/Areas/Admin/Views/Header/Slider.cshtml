@model List<Core.Models.Header>


<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Header</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="/Admin/Header/Create/0" class="btn btn-success">Create New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Description_ar</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@string.Format("/Upload/{0}", items.Image)" width="100" height="100" />
                                </td>
                                <td>@items.Description</td>
                                <td>@items.DescriptionArabic</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Header" asp-action="Create" asp-route-Id="@items.Id" class="btn btn-info">Edit</a>
                                    <form asp-controller="Header" asp-action="Delete" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@items.Id" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>     
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
@section Scripts
{
    <script src="~/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
}

