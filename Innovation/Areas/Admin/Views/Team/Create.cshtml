@model Core.Models.Team

<h1>Create Team</h1>

<form asp-controller="Team" asp-action="Save" role="form" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="Id" class="control-label">Id:</label>
        <div>
            <input type="hidden" asp-for="Id" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name:</label>
        <div>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Job" class="control-label">Job:</label>
        <div>
            <input type="text" asp-for="Job" class="form-control" />
            <span asp-validation-for="Job" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="control-label">Image:</label>
        <div>
            <input type="file" name="Files" class="form-control-file" asp-for="Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="MyTeam" class="btn btn-secondary">Cancel</a>
        </div>
    </div>

</form>
