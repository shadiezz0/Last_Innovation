@model Services.DTOs.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_Offline.cshtml";
}
<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Log in</h1>
                            </div>
                            @using (Html.BeginForm("Login", "UserAdmin", FormMethod.Post, new { @class = "user" }))
                            {
                                @Html.ValidationSummary()
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", placeholder = "Enter Email Address..." })
                                    @Html.LabelFor(m => m.Email)
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user", placeholder = "Password" })
                                    @Html.LabelFor(m => m.Password)
                                </div>
                                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.ErrorMessage
                                    </div>
                                }
                                <button type="submit" class="btn btn-primary btn-user btn-block">Login </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>